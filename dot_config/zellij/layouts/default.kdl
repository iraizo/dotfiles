layout {
    pane split_direction="vertical" {
        pane
    }

    pane size=2 borderless=true {
            plugin location="zellij:tab-bar"

        plugin location="file:~/.config/zellij/plugins/zjstatus.wasm" {
            format_left  "#[fg=#FFFFFF,bold] {session} {mode} {tabs}"
            format_right "#[bg=#8A8A8A,fg=#1c2023] #[bg=#8A8A8A,fg=#000000,bold]{swap_layout} #[bg=#1c2023,fg=#8A8A8A]"

            mode_locked "#[fg=#FF00D9,bold] {name} "
            mode_normal "#[fg=#AFFF00,bold] {name} "
            mode_resize "#[fg=#D75F00,bold] {name} "
            mode_default_to_mode "resize"

            tab_normal "#[bg=#8A8A8A,fg=#1c2023] #[bg=#8A8A8A,fg=#1c2023,bold]{name} {sync_indicator}{fullscreen_indicator}{floating_indicator} #[bg=#1c2023,fg=#8A8A8A]"
            tab_active "#[bg=#AFFF00,fg=#1c2023] #[bg=#AFFF00,fg=#1c2023,bold]{name} {sync_indicator}{fullscreen_indicator}{floating_indicator} #[bg=#1c2023,fg=#AFFF00]"

            tab_sync_indicator       " "
            tab_fullscreen_indicator "□ "
            tab_floating_indicator   "󰉈 "
        }
    }
}
